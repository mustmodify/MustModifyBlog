<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Content Title", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, placeholder: "Category", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
    <%= form.label 'Body', for: :text %>
    <%= form.rich_text_area :text %>
  </div>

  <div class="form-group">
    <%= form.label :markdown_content %>
    <%= form.text_area :markdown_content, class: 'form-control', rows: 6 %>
  </div>

    <div class="form-check">
        <%= form.check_box :published, class: "form-check-input" %>

    <label class="form-check-label" for="exampleCheck1">Publish</label>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
