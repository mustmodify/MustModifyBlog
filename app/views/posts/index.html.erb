<p id="notice"><%= notice %></p>
<% if user_signed_in?%>
  <h1> Welcome <%= current_user %></h1>
<% end %>
<h1>Blog Posts</h1><br>
<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% else %>
<% end %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Blog Post</th>
      <th>Category</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.category %></td>
        <br>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', post, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-info" %></button></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-info" %></button></td>
        <% else %>
        <td><%= link_to 'Show', post, class:"btn btn-info" %></td>
        <% end %>
        <td>
          <% if !user_signed_in? %> 
            <!-- do nothing -->
          <% elsif (post.published) %>
          Published
          <% else %>
              draft
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= paginate @posts %>
