<p id="notice"><%= notice %></p>
<% if user_signed_in?%>
  <h1> Welcome <%= current_user %></h1>
<% end %>
<br>
<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% else %>
<% end %>
<% if params[:category] %>
<h1>All Posts in <%= params[:category] %></h1>
<% end %>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col-xs-12 col-lg-6">
      <div class="card-deck" style="height: 100%">
        <div class="card mt-4" style="width: 100%">
          <div class="card-body postcard">
            <header>
            <%= link_to post_permalink_path(post) do %>
              <h2 class="card-title post-title">
              <%= post.title %>
              </h2>
              <% end %>
            <h6 class="card-subtitle mb-2 text-muted"><%= link_to post.category, posts_path(category: post.category), class: "post-category" %>
            <div class="text-muted"><%= post.created_at.to_date.strftime('%B %d, %Y')%></div>  

            </h6></header>
              <main><p><h5 class="card-text post-text"><%= truncate(strip_tags(post.text.to_plain_text.gsub(/\[[^\]]*\]/, '')),length: 350, separator: ' ') %></h5></p></main>
              <br>
              <footer>
                <% if user_signed_in? %>
                  <%= link_to 'Read More', post_permalink_path(post), class:"btn btn-info" %>
                  <%= link_to 'Edit', edit_post_path(post), class:"btn btn-info" %>
                  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-info" %>
                <% else %>
                  <%= link_to 'Read More', post_permalink_path(post), class:"btn btn-info" %>
                <% end %>
                <% if !user_signed_in? %> 
                  <!-- do nothing -->
                <% elsif (post.published) %>
                  Published
                <% else %>
                  draft
                <% end %>
              </footer>
            <br>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>
<%= paginate @posts, theme: 'twitter-bootstrap-4' %>
